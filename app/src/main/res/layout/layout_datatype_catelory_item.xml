<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_120dp"
    android:layout_height="@dimen/dimen_120dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        android:layout_marginVertical="@dimen/dimen_10dp"
        android:background="@drawable/bg_select">

        <ImageView
            android:id="@+id/imgDataType"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:background="@drawable/bg_circle"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDataTypeId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_18sp"
            app:layout_constraintBottom_toBottomOf="@id/imgDataType"
            app:layout_constraintEnd_toEndOf="@id/imgDataType"
            app:layout_constraintStart_toStartOf="@id/imgDataType"
            app:layout_constraintTop_toTopOf="@id/imgDataType" />

        <TextView
            android:id="@+id/txtDataTypeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:ellipsize="end"
            android:fontFamily="@font/font_nunito_regular"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/color_black_3"
            android:textSize="@dimen/dimen_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgDataType" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
