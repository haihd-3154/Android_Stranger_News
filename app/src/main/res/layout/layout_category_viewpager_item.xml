<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageDatatypeViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/style_img_corner_10"
        app:strokeColor="@color/color_grey"
        app:strokeWidth="@dimen/dimen_2dp" />

    <TextView
        android:id="@+id/txtDataTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dimen_18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/previousDataType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_black_80"
        android:src="@drawable/ic_chevron_left"
        app:layout_constraintBottom_toBottomOf="@id/imageDatatypeViewPager"
        app:layout_constraintStart_toStartOf="@id/imageDatatypeViewPager"
        app:layout_constraintTop_toTopOf="@id/imageDatatypeViewPager"
        app:tint="@color/color_white" />

    <ImageButton
        android:id="@+id/nextDataType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_black_80"
        android:src="@drawable/ic_navigate_next"
        app:layout_constraintBottom_toBottomOf="@id/imageDatatypeViewPager"
        app:layout_constraintEnd_toEndOf="@id/imageDatatypeViewPager"
        app:layout_constraintTop_toTopOf="@id/imageDatatypeViewPager"
        app:tint="@color/color_white" />


</androidx.constraintlayout.widget.ConstraintLayout>
